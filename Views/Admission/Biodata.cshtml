@model Applicant
@{
    Layout = "~/Views/Shared/_AdmissionLayout.cshtml";
    ViewData["Title"] = "Bio Data";
    bool isApproved = false;
    if (Model.StatusType != null && Model.StatusType.Name.Contains("Approved"))
    {
        isApproved = true;
    }
}

@* @functions {
    private bool IsDisabled() => Model.StatusType.Name.Contains("Approved");
} *@

<div class="container mx-auto">
    <div class="grid grid-cols-1 bg-white rounded-md">
        <div class="bg-blue-600 p-3 rounded-t-md">
            <h3 class="text-white text-1xl mb-1">BIODATA</h3>
        </div>
        <div class="container bg-white p-4">
            <form method="post" asp-action="Biodata">
                <p class="text-blue-600 text-md mb-3">PERSONAL INFORMATION</p>
                <input type="hidden" name="Student" asp-for="Token" />
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                    <div class="mb-2">
                        <label for="TitleID" class="block text-sm font-medium text-gray-700 mb-2">Title<span class="text-red-500">*</span></label>
                        @Html.DropDownList("TitleID", (SelectList)ViewBag.TitleID, "Select Title", new { @class = "p-2 border border-blue-600 bg-gray-100 rounded-md w-full", disabled = isApproved ? "disabled" : null })
                    </div>
                    <div></div>
                    <div></div>
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                    <div>
                        @Html.LabelFor(model => model.FirstName, new{ @class = "block text-sm font-medium text-gray-700 mb-2"})
                        @Html.TextBoxFor(model=>model.FirstName, new {@class = "p-2 border border-blue-600 bg-gray-100 rounded-md w-full", @required=true, disabled = isApproved ? "disabled" : null })
                        <input asp-for=FirstName class="form-control" required disabled />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
