@model Department
@{
    ViewData["Title"] = "Department Details";
}
<div class="grid grid-cols-1 bg-white rounded-md mx-auto shadow-sm">
    <div class="rounded-t-md bg-blue-600 p-3">
        <h3 class="text-white text-lg">@ViewData["Title"]</h3>
    </div>
    <div>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-4 p-5">
            <div class="mb-2">
                <label class="block mb-3">College Type</label>
                @Html.DropDownList("CollegeID", (SelectList)ViewBag.CollegeID, "Select College", new { @class = "p-2 border border-blue-600 bg-gray-100 rounded-md w-full", @disabled = true })
            </div>
            <div class="mb-3">
                <label class="block mb-3">Name</label>
                <input asp-for="Name" class="p-2 border border-blue-600 bg-gray-100 rounded-md w-full" disabled />
            </div>
            <div class="mb-3">
                @Html.CheckBoxFor(model => model.IsActive, new { @class = "p-2 border border-blue-600 bg-gray-100 rounded-md mr-2", @disabled = true })
                <label for="IsActive">Is Active</label>
            </div>
            <div class="mb-3"></div>
            <div class="mb-3">
                <a asp-action="Index" class="bg-gray-100 hover:bg-gray-200 rounded-md text-center p-2 block">Back To List</a>
            </div>
            <div></div>
        </div>
    </div>
</div>