@model LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smythe Admission Portal</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AdmissionPortal.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/images/smythelogo.png" />
    <script src="~/lib/tailwind.js"></script>
</head>
<body class="bg-blue-600">
    <div class="flex flex-col lg:flex-row min-h-screen">
        <div class="hidden lg:flex lg:w-1/2 bg-white items-center justify-center relative">
            <div class="text-center p-3">
                <div class="slider">
                    <div class="slide align-items-center">
                        <img src="~/images/smythelogo.png" class="w-52 h-auto" />
                    </div>
                </div>
            </div>
        </div>
        <div class="lg:w-1/2 flex items-center justify-center p-3">
            <div class="w-full max-w-md pt-12">
                <div class="text-center mb-4">
                    <h2 class="text-2xl font-bold mb-7 text-white">
                        Smythe University College Admission Portal
                    </h2>
                </div>
                @if (TempData["Message"] != null)
                {
                    <div class="bg-@TempData["Flag"]-100 border-l-4 border-@TempData["Flag"]-500 text-@TempData["Flag"]-700 p-2 rounded mb-3" role="alert">
                        <p>@TempData["Message"]</p>
                    </div>
                }
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div class="mb-4">
                        <label class="flex items-center bg-white rounded-full p-3">
                            <span class="material-icons text-blue-700 mr-2">
                                person
                            </span>
                            <input asp-for="Username" required class="bg-white focus:outline-none w-full" placeholder="Username" type="text" />
                        </label>
                        <span asp-validation-for="Username" class="text-red-500"></span>
                    </div>
                    <div class="mb-4">
                        <label class="flex items-center bg-white rounded-full p-3">
                            <span class="material-icons text-blue-700 mr-2">
                                lock_outline
                            </span>
                            <input asp-for="Password" required class="bg-white focus:outline-none w-full" placeholder="Password" type="password" />
                        </label>
                        <span asp-validation-for="Password" class="text-red-500"></span>
                    </div>
                    <div>
                        <button class="w-full bg-blue-800 hover:bg-blue-900 text-white font-semibold py-3 rounded-full "
                                id="loginBtn"
                                type="submit">
                            LOGIN
                        </button>
                    </div>
                </form>
                <div class="text-center mt-4">
                    <a class="text-white font-bold" asp-controller="Admission" asp-action="Login">
                        Applicant Login
                    </a>
                </div>
                <div class="text-center mt-6 text-sm text-white">
                    <p class="mt-2">
                        &copy; Copyright @DateTime.Now.Year Smythe University College
                    </p>
                </div>
            </div>
        </div>
    </div>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
</body>
</html>
