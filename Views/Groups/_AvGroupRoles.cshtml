@model IEnumerable<IdentityRole>
@{
    int avRoleCount = 1;
}

<div class="bg-white rounded-md">
    <div class="rounded-t-md bg-blue-600 p-3">
        <h5 class="text-white">Add Group Roles</h5>
    </div>
    <div class="p-3">
        <div class="overflow-x-auto mt-3" style="overflow-y: scroll; height:300px;">
            <table class="table-auto w-full text-sm text-left rtl:text-right text-gray-500 dataTable">
                <thead class="text-sm text-gray-700 uppercase bg-gray-100">
                    <tr>
                        <th class="px-6 py-3">No.</th>
                        <th class="px-6 py-3">Name</th>
                        <th class="px-6 py-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td class="w-1/3 py-3 px-4 border-b">@avRoleCount</td>
                            <td class="w-1/3 py-3 px-4 border-b">@role.Name</td>
                            <td class="w-1/3 py-3 px-4 border-b">
                                <form asp-action="AddGroupRole" asp-controller="Groups" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" value="@ViewBag.GroupID" name="groupID" />
                                    <input type="hidden" value="@role.Id" name="roleID" />
                                    <button class="p-2 bg-green-600 hover:bg-green-800 rounded-md text-white">Add Role</button>
                                </form>
                            </td>
                        </tr>
                        avRoleCount++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
