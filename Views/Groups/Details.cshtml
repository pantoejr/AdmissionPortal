@model Group
@{
    ViewData["Title"] = "Group Details";
}
<div class="grid grid-cols-1 bg-white rounded-md mx-auto shadow-sm mb-5">
    <div class="rounded-t-md bg-blue-600 p-3">
        <h3 class="text-white text-lg">@ViewData["Title"]</h3>
    </div>
    <div class="p-5 rounded-b-md">
        <div class="flex flex-row">
            <div class="basis-full px-3">
                    <div class="p-3">
                        <label class="block mb-3">Name</label>
                        <input asp-for="Name" readonly class="p-2 border-none bg-gray-100 rounded-md w-full" />
                    </div>
                    <div class="p-3">
                        <label class="block mb-3">Description</label>
                        <input asp-for="Description" readonly class="p-2 border-none bg-gray-100 rounded-md w-full" />
                    </div>
                    <div class="flex flex-row flex-nowrap gap-3 p-3">
                        <div class="basis-full sm:basis-1/2">
                            <a asp-action="Index" class="bg-gray-100 hover:bg-gray-200 rounded-md text-center p-2 block">Back To List</a>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
<div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
    <div id="avGroupRoles"></div>
    <div id="unAvGroupRoles"></div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#unAvGroupRoles").load("/Groups/UnAvGroupRoles/" + @Model.Id );
            $("#avGroupRoles").load("/Groups/AvGroupRoles/" + @Model.Id );
        })
    </script>
}