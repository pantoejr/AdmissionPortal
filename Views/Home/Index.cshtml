@{
    ViewData["Title"] = "Home Page";
}

<div class="container mx-auto p-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <a class="bg-blue-500 hover:bg-blue-600 p-6 rounded-lg text-center" href="#">
            <span class="material-icons text-white text-4xl mb-4">
                how_to_reg
            </span>
            <p class="font-semibold text-white">Approve Applicant</p>
        </a>
        <a asp-controller="Tokens" asp-action="Index" class="bg-red-500 hover:bg-red-600 p-6 rounded-lg text-center">
            <span class="material-icons text-white text-4xl mb-4">
                token
            </span>
            <p class="font-semibold text-white">Token</p>
        </a>
        <a class="bg-purple-500 hover:bg-purple-600 p-6 rounded-lg text-center" href="#">
            <span class="material-icons text-white text-4xl mb-4">
                group
            </span>
            <p class="font-semibold text-white">Applicant Referees</p>
        </a>
        <a class="bg-gray-500 hover:bg-gray-600 p-6 rounded-lg text-center" href="#">
            <span class="material-icons text-white text-4xl mb-4">
                folder_open
            </span>
            <p class="font-semibold text-white">Applicant Documents</p>
        </a>
    </div>

    <!-- Activity Log -->
    <div class="bg-blue-500 hover:bg-blue-600 p-6 rounded-lg shadow mb-8">
        <h3 class="text-white mb-4">Activity Log</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="text-center">
                <span class="material-icons text-white text-4xl mb-2">
                    token
                </span>
                <p class="text-white">Total No. of Tokens</p>
                <p class="text-2xl text-white font-bold">1</p>
            </div>
            <div class="text-center">
                <span class="material-icons text-white text-4xl mb-2">
                    check_circle
                </span>
                <p class="text-white">Used Token</p>
                <p class="text-2xl text-white font-bold">2</p>
            </div>
            <div class="text-center">
                <span class="material-icons text-white text-4xl mb-2">
                    cancel
                </span>
                <p class="text-white">Expired Tokens</p>
                <p class="text-2xl text-white font-bold">0</p>
            </div>
        </div>
    </div>

    <div class="bg-blue-600 p-6 rounded-lg">
        <h3 class="text-white mb-4">Number of Applicants</h3>
        <div class="h-40 bg-white rounded-lg"></div>
    </div>
</div>
