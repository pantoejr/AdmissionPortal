@model OccupationType
@{
    ViewData["Title"] = "Create Occupation Type";
}

<div class="grid grid-cols-1 bg-white sm:w-1/2 rounded-md mx-auto shadow-sm">
    <div class="rounded-t-md bg-blue-600 p-3">
        <h3 class="text-white text-lg">@ViewData["Title"]</h3>
    </div>
    <div class="p-5 rounded-b-md">
        <div class="flex flex-row">
            <div class="basis-full px-3">
                <form asp-action="Create" method="post">
                    <div class="p-3">
                        <label class="block mb-3">Name</label>
                        <input asp-for="Name" class="p-2 border border-blue-600 bg-gray-100 rounded-md w-full" />
                    </div>
                    <div class="flex flex-row flex-nowrap gap-3 p-3">
                        <div class="basis-full sm:basis-1/2">
                            <button class="bg-green-600 hover:bg-green-700 text-white p-2 rounded-md w-full">Submit</button>
                        </div>
                        <div class="basis-full sm:basis-1/2">
                            <a asp-action="Index" class="bg-gray-100 hover:bg-gray-200 rounded-md text-center p-2 block">Back To List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>