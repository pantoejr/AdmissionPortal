@model IEnumerable<NationalityType>
@{
    ViewData["Title"] = "List of Nationalities";
    int count = 1;
}
<div class="grid grid-cols-1 bg-white rounded-md shadow-sm">
    <div class="rounded-t-md bg-blue-600 p-3">
        <h3 class="text-white text-lg">@ViewData["Title"]</h3>
    </div>
    <div class="p-5 rounded-b-md">
        <div class="grid grid-cols-1 sm:grid-cols-2">
            <div class="">
                <a asp-action="Create" class="bg-blue-600 hover:bg-blue-700 p-2 rounded-md text-white mb-3">Add New</a>
            </div>
            @* <div class="">
                <form asp-action="UploadExcel" asp-controller="NationalityTypes" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="file">Upload Excel File</label>
                        <input type="file" name="file" accept=".xls,.xlsx" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">Upload</button>
                </form>
            </div> *@
        </div>
        <div class="overflow-x-auto mt-2">
            <table class="table-auto w-full text-sm text-left rtl:text-right text-gray-500 dataTable" width="100%">
                <thead class="text-sm text-gray-700 uppercase bg-gray-100">
                    <tr>
                        <th class="px-6 py-3">No</th>
                        <th class="px-6 py-3">Name</th>
                        <th class="px-6 py-3">Status</th>
                        <th class="px-6 py-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="w-1/3 py-3 px-4 border-b">@count</td>
                            <td class="w-1/3 py-3 px-4 border-b">@item.Name</td>
                            @if (item.IsActive == true)
                            {
                                <td><span class="bg-green-500 p-2 rounded-md text-white">Active</span></td>
                            }
                            else
                            {
                                <td><span class="bg-red-500 p-2 rounded-md text-white">InActive</span></td>
                            }
                            <td class="w-1/3 py-3 px-4 border-b">
                                <div class="flex space-x-2">
                                    <a asp-action="Edit" class="bg-yellow-400 p-2 rounded-md text-black hover:bg-yellow-600" asp-route-Id="@item.Id">Edit</a>
                                    <a asp-action="Delete" class="bg-red-400 p-2 rounded-md text-white hover:bg-red-600" asp-route-Id="@item.Id">Delete</a>
                                </div>
                            </td>
                        </tr>
                        count++;
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>