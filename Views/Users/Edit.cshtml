@model UserViewModel
@{
    ViewData["Title"] = "Edit User";
}
<div class="grid grid-cols-1 bg-white rounded-md mx-auto shadow-sm">
    <div class="rounded-t-md bg-blue-600 p-3">
        <h3 class="text-white text-lg">@ViewData["Title"]</h3>
    </div>
    <div class="p-5 rounded-b-md">
        <div class="grid grid-cols-1">
            <div class="px-3">
                <form asp-action="Edit" method="post">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-5">
                        <div class="p-2">
                            <label class="block mb-2">First Name</label>
                            <input asp-for="FirstName" class="p-2 border border-blue-600 bg-gray-100 rounded-md w-full" />
                        </div>
                        <div class="p-2">
                            <label class="block mb-2">Last Name</label>
                            <input asp-for="LastName" class="p-2 border border-blue-600 bg-gray-100 rounded-md w-full" />
                        </div>
                        <div class="p-2">
                            <label class="block mb-2">Phone Number</label>
                            <input asp-for="PhoneNumber" class="p-2 border border-blue-600 bg-gray-100 rounded-md w-full" />
                        </div>
                        <div class="p-2">
                            <label class="block mb-2">Email</label>
                            <input asp-for="Email" class="p-2 border border-blue-600 bg-gray-100 rounded-md w-full" />
                        </div>
                        <div class="p-2">
                            <label class="block mb-3">Group</label>
                            @Html.DropDownList("GroupID", (SelectList)ViewBag.GroupID, "Select Group", new { @class = "p-2 border border-blue-600 bg-gray-100 rounded-md w-full" })
                        </div>
                        <div class="mb-3"></div>
                        <div class="flex flex-row flex-nowrap gap-3 p-2">
                            <div class="basis-full sm:basis-1/2">
                                <button class="bg-green-600 hover:bg-green-700 text-white p-2 rounded-md w-full">Update</button>
                            </div>
                            <div class="basis-full sm:basis-1/2">
                                <a asp-action="Index" class="bg-gray-100 hover:bg-gray-200 rounded-md text-center p-2 block">Back To List</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
